    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "11.1.1",
    "next": "11.0.1",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.6",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rollup": "2.54.0",
    "rollup-plugin-typescript2": "0.30.0",
    "rollup-plugin-virtual": "1.0.1",
    "typescript": "4.3.5"
  },
  "scripts": {
    "start": "next dev",
    "start-production": "next start",
    "build": "next build && next export && touch out/.nojekyll",
    "lint": "eslint --ext js,ts,tsx src --max-warnings=0",
    "build:package": "rollup -c && node copy-package-json.js && cp README.md dist",
    "test": "jest test --coverage",
    "deploy": "npx gh-pages -d out -t",
    "format": "yarn lint --fix",
    "release": "npm-run-all build:package && cd dist && npm publish",
    "validate": "CI=true npm-run-all lint test build validate:package",
    "validate:package": "NODE_ENV=production yarn build:package && node validate-package.js",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --max-warnings=0 --no-ignore"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{ts,tsx}",
      "!src/setup*",
      "!src/serviceWorker.ts",
      "!src/**/dist/**/*"
    ]
  }
}
