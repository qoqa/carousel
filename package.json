{
  "name": "@pierre-do/carousel",
  "version": "0.1.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "homepage": "https://pierre-do.github.io/carousel/",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@material-ui/core": "4.9.0",
    "@material-ui/icons": "4.5.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-swipeable-views": "0.13.3",
    "react-swipeable-views-utils": "0.13.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.0.2",
    "@testing-library/react": "9.4.0",
    "@testing-library/user-event": "8.1.0",
    "@types/jest": "25.1.1",
    "@types/node": "13.5.2",
    "@types/react": "16.9.19",
    "@types/react-dom": "16.9.5",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.1",
    "lint-staged": "10.0.6",
    "prettier": "1.19.1",
    "react-scripts": "3.3.0",
    "typescript": "3.7.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:package": "npx tsc --build src/carousel/tsconfig.json",
    "test": "react-scripts test --coverage",
    "deploy": "npx gh-pages -d build",
    "format": "prettier --config ./.prettierrc --write \"{,!(build|node_modules|coverage|dist)/**/,.}/*{.ts,.tsx,.js,.jsx,.css,.scss,.md,.html,.json}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "linebreak-style": [
        "error",
        "unix"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --max-warnings=0 --no-ignore"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{ts,tsx}",
      "!src/setup*",
      "!src/serviceWorker.ts",
      "!src/**/dist/**/*"
    ]
  }
}
