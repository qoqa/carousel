{
  "name": "@pierre-do/carousel",
  "version": "0.1.6",
  "main": "index.js",
  "module": "es/index.js",
  "types": "index.d.ts",
  "license": "MIT",
  "homepage": "https://pierre-do.github.io/carousel/",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "peerDependencies": {
    "@material-ui/core": "^4",
    "@material-ui/icons": "^4",
    "react": "^16",
    "react-dom": "^16"
  },
  "dependencies": {
    "react-swipeable-views": "0.13.9",
    "react-swipeable-views-utils": "0.13.9"
  },
  "devDependencies": {
    "@material-ui/core": "4.9.5",
    "@material-ui/icons": "4.9.1",
    "@testing-library/jest-dom": "5.1.1",
    "@testing-library/react": "9.4.1",
    "@testing-library/user-event": "10.0.0",
    "@types/jest": "25.1.3",
    "@types/node": "13.7.7",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-scripts": "3.4.0",
    "rollup": "1.32.0",
    "rollup-plugin-typescript2": "0.26.0",
    "typescript": "3.8.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "lint": "eslint --ext js,ts,tsx src --max-warnings=0",
    "build:package": "rollup -c && node copy-package-json.js",
    "test": "react-scripts test --coverage",
    "deploy": "npx gh-pages -d build",
    "format": "yarn lint --fix",
    "release": "npm-run-all build:package && cd dist && npm publish",
    "validate": "CI=true npm-run-all lint test build build:package"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --max-warnings=0 --no-ignore"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{ts,tsx}",
      "!src/setup*",
      "!src/serviceWorker.ts",
      "!src/**/dist/**/*"
    ]
  }
}
